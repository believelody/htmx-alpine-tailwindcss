<input type="text" {{#if id}}id="{{ id }}"{{/if}}
       name="{{ name }}" {{#if required}}required{{/if}}
       placeholder="{{ placeholder }}" x-model="value"
       {{#if autocomplete}}autocomplete="{{ autocomplete }}"{{/if}}
       class="input {{#if emphasis}}input-{{emphasis}}{{/if}} {{#if transition}}color-transition{{/if}}">