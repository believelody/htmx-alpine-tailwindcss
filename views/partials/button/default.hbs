{{log color}}
<button
    {{#unless bind }}
        {{#if type }}
            type="{{ type }}"
        {{/if }}
    {{/unless}}
    {{#if click }}@click="{{ click }}"{{/if}}
    {{#if bind }}x-bind="{{ bind }}"{{/if}}
    class="{{withDefault class 'px-4 py-2 rounded md:flex'}} {{#if color}}
            {{~#if outlined}}
                btn btn-{{ color }}-outlined
            {{~^~}}
                btn btn-{{ color }}
            {{~/if}}
        {{~^~}}
            {{~#if outlined}}
                btn btn-outlined
            {{~^~}}
                btn
            {{~/if}}
        {{~/if}}"
>
    {{#if label}}
        <span>{{ label }}</span>
    {{/if}}
    {{#if icon}}
        {{partial (append "icon/" icon) }}
    {{/if}}
    {{#if srOnly}}
        <span class="sr-only">{{ srOnly }}</span>
    {{/if}}
    {{#if image}}
        {{ image }}
    {{/if}}
</button>