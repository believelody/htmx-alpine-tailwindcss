<header class="text-gray-600 border-b body-font">
  <div class="container flex flex-row-reverse items-center justify-between p-5 mx-auto md:flex-row">
    {{> element/brand }}
    {{> nav/menu-list }}
    {{> sidebar/menu }}
    <div class="items-center hidden gap-4 md:flex" hx-get="api/auth/header" hx-push-url="false" hx-trigger="auth-success">
        {{log "isAuthenticated : " isAuthenticated}}
      {{#if user.isAuthenticated}}
        {{> dropdown/user }}
      {{else}}
        <template x-if="!currentRoute.includes('/login')">
          {{> modal/login }}
        </template>
      {{/if}}
    </div>
  </div>
</header>