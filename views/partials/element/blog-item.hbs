<div class="relative h-full px-8 pt-16 pb-24 text-center rounded-lg shadow {{cond item.background '' 'bg-neutral-100'}}">
    {{#if item.background}}
        <img class="absolute top-0 left-0 object-cover w-full h-full -z-10 opacity-20" src="{{ item.background }}" alt="{{ item.content }}" />
    {{/if}}
    <h5 class="mb-1 font-medium tracking-widest text-primary-700 title-font">{{ item.subtitle }}</h5>
    <h2 class="mb-3 font-medium text-neutral-900 title-font sm:text-2xl">{{ item.title }}</h2>
    <p class="mb-3 leading-relaxed">{{ item.content }}</p>
    <a hx-get="{{ item.url }}" hx-push-url="true" hx-swap="innerHTML" hx-target="#content" class="inline-flex items-center cursor-pointer hover:border-b-2 hover:border-b-primary-400 text-primary-500">
        <span class="mr-2">Learn More</span>
        <span>{{> icon/arrow-right size=4 }}</span>
    </a>
    <div class="absolute bottom-0 left-0 flex justify-center w-full py-4 mt-2 leading-none text-center text-neutral-800">
        <section class="inline-flex items-center py-1 pr-3 mr-3 text-sm leading-none border-r-2 border-neutral-200">
            <span class="mr-1">{{> icon/eye }}</span>
            <span>{{ item.views }}</span>
        </section>
        <section class="inline-flex items-center text-sm leading-none ">
            <span class="mr-1">{{> icon/chat }}</span>
            <span>{{ item.comments }}</span>
        </section>
    </div>
</div>