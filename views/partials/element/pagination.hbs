<nav class="flex my-8 items-center justify-center px-2">
  {{#unless (eq page 1)}}
    <section class="flex flex-wrap sm:flex-row-reverse shrink gap-2 items-center justify-center">
      {{> link/base href=(append '/blog?page=' (numberIntoString (subtract page 1))) label="Prev" class="bg-neutral-700 text-white py-2 px-4 rounded-md" }}
      {{> link/base href="/blog?page=1" label="First" class="bg-neutral-700 text-white py-2 px-4 rounded-md" }}
    </section>
  {{/unless}}
  <section class="w-2/3 sm:w-auto text-center text-lg mx-auto sm:mx-8">
    {{!-- Pagination with button --}}
    {{!-- {{#each (arrayFrom pages) as |item|}}
      {{#with @root.meta}}
        {{#if (eq page (add @index 1))}}
          <span class="px-4">{{add @index 1}}</span>
        {{else}}
          {{> link/base href=(append '/blog?page=' (numberIntoString (add @index 1))) label=(add @index 1) class="bg-neutral-700 text-white py-2 px-4 rounded-md" }}
        {{/if}}
      {{/with}}
    {{/each}} --}}

    {{!-- Pagination with select --}}
    <select name="page" hx-get="/blog" hx-push-url="true" hx-target="#content" hx-trigger="change" aria-valuenow="{{ page }}" aria-valuemin="1" aria-valuemax="{{ pages }}">
      {{#each (arrayFrom pages)}}
        {{#with @root.meta}}
          <option {{#if (eq page (add @index 1))}}class="bg-neutral-700 text-white"{{/if}} {{#if (eq page (add @index 1))}}selected{{/if}} value="{{add @index 1}}">{{add @index 1}}</option>
        {{/with}}
      {{/each}}
    </select>
    <span>/ {{ pages }}</span>
  </section>
  {{#unless (eq page pages)}}
    <section class="flex flex-wrap shrink gap-2 items-center justify-center">
      {{> link/base href=(append '/blog?page=' (numberIntoString (add page 1))) label="Next" class="bg-neutral-700 text-white py-2 px-4 rounded-md" }}
      {{> link/base href=(append '/blog?page=' (numberIntoString pages)) label="Last" class="bg-neutral-700 text-white py-2 px-4 rounded-md" }}
    </section>
  {{/unless}}
</nav>