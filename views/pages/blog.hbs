{{#*inline 'extra'}}
<div class="absolute bottom-0 left-0 flex items-center justify-center w-full py-4 mt-2 leading-none text-center text-neutral-800">
    <section class="inline-flex items-center py-1 text-sm leading-none cursor-pointer">
        <span class="mr-1">{{> icon/eye }}</span>
        <span>{{ item.views }}</span>
    </section>
    <span class="w-px h-4 mx-3 border border-neutral-700"></span>
    <section class="inline-flex items-center text-sm leading-none cursor-pointer ">
        <span class="mr-1">{{> icon/chat }}</span>
        <span>{{ item.comments }}</span>
    </section>
</div>
{{/inline}}

{{!< main }}
<section class="text-neutral-600 body-font border h-full">
  {{> element/seo}}
  <div class="container mx-auto border h-full">
    {{#if error}}
      <div class="flex items-center justify-center h-full">
        <p class="text-lg">{{ error }}</p>
      </div>
    {{else}}
      <div class="pt-16 grid gap-3 sm:grid-cols-2 lg:grid-cols-3">
        {{#each blogs as |item|}}
        <div class="min-w-full" id="blogs-content">
          {{> block/base-3 color="primary" item=item extra='extra'}}
        </div>
        {{/each}}
      </div>
      {{> pagination/input href=(chain "/blog?limit=" meta.limit "&pages=" (numberIntoString meta.pages)) page=meta.page pages=meta.pages}}
    {{/if}}
  </div>
</section>