{{#*inline 'extra'}}
<div class="absolute bottom-0 left-0 flex items-center justify-center w-full py-4 mt-2 leading-none text-center text-neutral-800">
    <section class="inline-flex items-center py-1 text-sm leading-none cursor-pointer">
        <span class="mr-1">{{> icon/eye }}</span>
        <span>{{ item.views }}</span>
    </section>
    <span class="w-px h-4 mx-3 border border-neutral-700"></span>
    <section class="inline-flex items-center text-sm leading-none cursor-pointer ">
        <span class="mr-1">{{> icon/chat }}</span>
        <span>{{ item.comments }}</span>
    </section>
</div>
{{/inline}}

{{!< main }}
<section class="text-neutral-600 body-font h-full">
  {{> element/seo}}
  <div class="relative container flex flex-col mx-auto h-full box-border">
    <div class="grid gap-3 sm:grid-cols-2 lg:grid-cols-3 h-full">
      {{#each blogs as |item|}}
        <div class="min-w-full" id="blogs-content">
          {{> block/base-3 color="primary" item=item extra='extra'}}
        </div>
      {{else}}
        <div class="flex items-center justify-center sm:col-span-2 lg:col-span-3">
          <p class="text-lg text-center">Aucun résultat n'a été trouvé</p>
        </div>
      {{/each}}
    </div>
    {{!-- {{> pagination/select href=(chain "/blog?limit=" meta.limit) page=meta.page pages=meta.pages}} --}}
    {{> pagination/input href=(chain "/blog?limit=" meta.limit) page=meta.page pages=meta.pages}}
  </div>
</section>